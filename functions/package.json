{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/storage": "^3.3.1",
    "@slack/bolt": "^1.3.0",
    "@types/jest": "^24.0.18",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.1.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "typemoq": "^2.1.0"
  },
  "devDependencies": {
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "private": true
}
